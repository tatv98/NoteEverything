<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="30dp"
        android:textAllCaps="true"
        android:text="Thống kê"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/layout_boder"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng chi"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="true"/>
            <TextView
                android:id="@+id/tvSumExpense"
                android:text="0đ"
                android:textColor="#F44336"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Tháng:"
            android:padding="1dp"
            android:textSize="16sp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toLeftOf="@id/spnMonth"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Spinner
            android:id="@+id/spnMonth"
            android:background="#FF9800"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toLeftOf="@+id/tvYear"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Năm"
            android:padding="1dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toLeftOf="@+id/edtYear"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <EditText
            android:id="@+id/edtYear"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="#FF9800"
            android:inputType="number"
            android:text="2020"
            android:paddingLeft="5dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:padding="30dp"
            android:gravity="center">
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/lineChartExpense"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
        </RelativeLayout>
</LinearLayout>