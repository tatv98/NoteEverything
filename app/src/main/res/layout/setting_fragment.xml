<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/frag_setting"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:text="Cá nhân"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:layout_marginTop="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/layout_boder"
            android:layout_marginTop="20dp"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:enabled="false"
                    android:text="Email: "/>
                <EditText
                    android:id="@+id/edtEmail"
                    android:padding="5dp"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#009688"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/word_add_boder_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:text="User: "/>
                <EditText
                    android:id="@+id/edtUser"
                    android:padding="5dp"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#009688"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:enabled="false"
                    android:background="@drawable/word_add_boder_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:text="Old-Password: "/>
                <EditText
                    android:id="@+id/edtOldPass"
                    android:padding="5dp"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#009688"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:background="@drawable/word_add_boder_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:text="New-Password: "/>
                <EditText
                    android:id="@+id/edtNewPass"
                    android:padding="5dp"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#009688"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:background="@drawable/word_add_boder_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:text="Re-Password: "/>
                <EditText
                    android:id="@+id/edtRePass"
                    android:padding="5dp"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#009688"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:background="@drawable/word_add_boder_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="5dp">
                <Button
                    android:id="@+id/btnUpdateUser"
                    android:text="Cập nhật"
                    android:background="@drawable/add_note_custom_button_add"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"/>
                <Button
                    android:id="@+id/btnClear"
                    android:text="Xóa dữ liệu"
                    android:background="@drawable/add_note_custom_button_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>