<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/vgWorkItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    card_view:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFF"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <ImageView
            android:id="@+id/ivThumbnail"
            android:padding="3dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_work"
            tools:ignore="MissingConstraints" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@id/ivThumbnail">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="Tiêu đề"
                android:textColor="#9C27B0"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="Trạng thái:"
                android:textColor="#3F51B5"
                android:layout_marginRight="5dp"
                android:textSize="13sp"
                app:layout_constraintRight_toLeftOf="@id/tvStatus"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:text="Đang hoàn thành"
                android:textColor="#03A9F4"
                android:textStyle="italic"
                android:textSize="13sp"
                tools:ignore="MissingConstraints"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:id="@+id/vLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A4434444"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"/>
            <TextView
                android:id="@+id/tvDeadlineLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời hạn:"
                android:textColor="#3F51B5"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                app:layout_constraintTop_toBottomOf="@id/vLine"
                app:layout_constraintRight_toLeftOf="@id/ivThumbnail"
                tools:ignore="NotSibling" />
            <TextView
                android:id="@+id/tvDeadline"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="11/1/2020"
                android:textColor="#03A9F4"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                app:layout_constraintTop_toBottomOf="@+id/vLine"
                app:layout_constraintLeft_toRightOf="@id/tvDeadlineLabel"
                />
            <TextView
                android:id="@+id/tvPlaceLabel"
                android:text="Địa điểm:"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#3F51B5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints,NotSibling"
                app:layout_constraintTop_toBottomOf="@id/tvDeadlineLabel"
                app:layout_constraintRight_toLeftOf="@id/ivThumbnail"/>
            <TextView
                android:id="@+id/tvPlace"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="VPBM"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#4CAF50"
                app:layout_constraintLeft_toRightOf="@+id/tvPlaceLabel"
                app:layout_constraintTop_toBottomOf="@+id/tvDeadline"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>